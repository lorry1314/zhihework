<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/title_color"
        android:paddingRight="20.0dip" >

        <ImageView
            android:id="@+id/regis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <TextView
            android:id="@+id/login_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="公司认证"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <LinearLayout
            android:id="@+id/my_set_buyaddress_sheng_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:paddingLeft="10.0dip" >

            <TextView
                android:id="@+id/my_set_buyaddress_sheng"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="这是您的公司、部门"
                android:textSize="14.0sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg"
            android:paddingLeft="10.0dip" >

            <EditText
                android:id="@+id/my_set_buyaddress_jiequ"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:hint="请输入姓名"
                android:textSize="13.0dip" />

            <LinearLayout
                android:id="@+id/my_set_buyaddress_jiequ_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/my_set_buyaddress_jiequ_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="22.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="这是您补充的详细地址"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg"
            android:paddingLeft="10.0dip" >

            <TextView
                android:id="@+id/my_set_buyaddress_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:text="请输入您的手机号码"
                android:textSize="13.0dip" />

            <LinearLayout
                android:id="@+id/my_set_buyaddress_name_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/my_set_buyaddress_name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="22.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="这是您的收货人姓名"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg"
            android:paddingLeft="10.0dip" >

            <EditText
                android:id="@+id/my_set_buyaddress_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:digits="0123456789"
                android:maxLength="4"
                android:hint="请输入四位（数字）员工编号"
                android:textSize="13.0dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="22.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="这是您补充的详细地址"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" >

            <LinearLayout
                android:id="@+id/my_set_buyaddress_phone_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20.0dip" >

            <Button
                android:id="@+id/my_set_buyaddress_address_btn"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="bottom"
                android:background="@drawable/ripple_click_bg"
                android:text="提交认证"
                android:textColor="#ffffffff"
                android:textSize="20.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>