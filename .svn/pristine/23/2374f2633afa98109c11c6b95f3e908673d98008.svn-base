<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/title_color" >

        <ImageView
            android:id="@+id/regis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <TextView
            android:id="@+id/regis_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="60.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/regis_putphone"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="#ffededed"
            android:drawableLeft="@drawable/zhucephone"
            android:drawablePadding="15.0dip"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textMultiLine"
            android:padding="10.0dip"
            android:text=""
            android:textSize="12.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffededed"
            android:drawableLeft="@drawable/zhucephone"
            android:drawablePadding="15.0dip"
            android:ems="10"
            android:hint="请输入手机验证码"
            android:inputType="textMultiLine"
            android:padding="10.0dip"
            android:text=""
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/ctv_verify"
            android:layout_width="75.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/ripple_click_bg"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.0dip" />

    <EditText
        android:id="@+id/login_editText2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:background="#ffededed"
        android:drawableLeft="@drawable/log_05"
        android:drawablePadding="15.0dip"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="10.0dip"
        android:textSize="12.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.0dip" />

    <EditText
        android:id="@+id/login_editText3"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:background="#ffededed"
        android:drawableLeft="@drawable/log_05"
        android:drawablePadding="15.0dip"
        android:ems="10"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:padding="10.0dip"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/regis_next"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="50.0dip"
        android:layout_marginTop="35.0dip"
        android:background="@drawable/ripple_click_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

</LinearLayout>