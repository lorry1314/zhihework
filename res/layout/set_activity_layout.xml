<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/title_color" >

        <ImageView
            android:id="@+id/regis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <TextView
            android:id="@+id/sale_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="50.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="52.0dip"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="11.0dip"
                    android:background="@drawable/msg_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="消息提醒设置"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="接受新的消息提醒"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />

                <com.zorgoom.zhihework.view.SwitchButton
                    android:id="@+id/sb_msg_remind"
                    android:layout_width="66.0dip"
                    android:layout_height="44.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11.0dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="声音"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />

                <com.zorgoom.zhihework.view.SwitchButton
                    android:id="@+id/sb_msg_voice"
                    android:layout_width="66.0dip"
                    android:layout_height="44.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11.0dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="震动"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />

                <com.zorgoom.zhihework.view.SwitchButton
                    android:id="@+id/sb_msg_shake"
                    android:layout_width="66.0dip"
                    android:layout_height="44.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11.0dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="18.0dip"
                android:background="#fff3f4f6" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="52.0dip"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="11.0dip"
                    android:background="@drawable/service_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="服务"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <RelativeLayout
                android:id="@+id/rel_synopsis"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="关于智核工作"
                    android:textColor="#ff595056"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11.0dip"
                    android:background="@drawable/more_img" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ffe5e5e5" />

            <RelativeLayout
                android:id="@+id/rel_versions"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_current_versions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11.0dip"
                    android:lineSpacingExtra="4.0dip"
                    android:text="版本升级(当前V1.0)"
