<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe5e5e5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/theme_color" >

        <ImageView
            android:id="@+id/regis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />

        <TextView
            android:id="@+id/regis_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发布信息"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="10.0dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="房屋名称"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_house"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="#ffffffff"
            android:gravity="center_vertical"
            android:text="深圳市百花园小区"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffe5e5e5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="房屋户型"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/et_shi"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="#ffffffff"
            android:hint="如：3"
            android:inputType="number"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:text="室"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/et_ting"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="#ffffffff"
            android:hint="如：2"
            android:inputType="number"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:text="厅"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="0.5dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="房屋面积"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_mianji"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="#ffffffff"
            android:gravity="center_vertical"
            android:text="89 m²"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginTop="0.5dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="出租标题"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/et_biaoti"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="#ffffffff"
            android:hint="50字以内标题描述"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:layout_marginTop="0.5dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="出租描述"
            android:textColor="#ff373737"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/et_miaoshu"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="#ffffffff"
            android:hint="50字以内标题描述，如房屋配置情况"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sumbut"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="50.0dip"
        android:background="@drawable/ripple_click_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

</LinearLayout>